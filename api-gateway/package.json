{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for microservices architecture",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
