    "@nestjs/platform-express": "^11.1.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.8",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/node": "^22.15.3",
    "typescript": "^5.8.3"
